{
    "keyboard_name": "Sofle",
    "features": {
        "bootmagic": true,
        "encoder": true,
        "nkro": true,
        "oled": true
    },
    "build": {
        "lto": true
    },
    "usb": {
        "vid": "0xFC32"
    },
    "diode_direction": "COL2ROW",
    "qmk": {
        "tap_keycode_delay": 10
    },
    "split": {
        "enabled": true,
        "serial": {
            "pin": "D2"
        },
        "transport": {
            "sync": {
                "matrix_state": true
            }
        }
    },
    "ws2812": {
        "pin": "D3"
    }
}
